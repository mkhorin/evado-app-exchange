<template id="model-form-radio-list">
  <div :class="{'has-error': error, 'required': required, 'form-attr form-group row': true}">
    <label class="col-md-3 col-form-label">
      <span :data-t="translationCategory" class="col-form-label-text">{{label}}</span>
      <i v-if="extHint" class="hint-icon" :title="extHint" :data-t="translationCategory"></i>
    </label>
    <div class="col-lg-9">
      <template v-if="readOnly">
        <div class="form-control-plaintext">
          <span :data-t="translationCategory">{{valueTitle}}</span>
        </div>
      </template>
      <template v-else>
        <div class="form-check-list-inline form-check-list">
          <div v-for="item of items" :key="item.value" class="form-check form-check-inline">
            <input v-model="value" :id="item.id" :value="item.value" type="radio" class="form-check-input">
            <label :for="item.id" class="form-check-label">{{item.text}}</label>
          </div>
        </div>
      </template>
      <div class="error-block">{{error}}</div>
      <div class="hint-block" :data-t="translationCategory">{{hint}}</div>
    </div>
  </div>
</template>